<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--dibutuhkan untuk membuat binding class-->
    <data>
        <variable
            name="FragmentContainerViewModel"
            type="com.example.yoshua145150201111044.databinding.viewmodel.FragmentContainerViewModel" />
    </data>
    <!--drawerLayout untuk memberi navigation drawer, FrameLayout untuk tampilan utama,-->
    <!--fitsSystemWindows digunakan untuk tidak overlap dengan status bar,-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- We use a Toolbar so that our drawer can be displayed
                 in front of the action bar -->
            <android.support.v7.widget.Toolbar
                android:textColor="@android:color/white"
                android:id="@+id/my_awesome_toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:background="?attr/colorPrimary"
                app:theme="@style/ToolbarColoredBackArrow"/>

            <FrameLayout
                android:id="@+id/fragment_container"
                android:orientation="vertical" android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>

        </LinearLayout>




</layout>

